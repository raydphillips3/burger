    crossorigin="anonymous"></script>
  <title>Devour Burger</title>
</head>

<body>
  {{{ body }}}
  <script type="text/javascript">
    $(document).ready(function () {

      //create new burger
      $("#burgerBtn").click(function () {
        var newBurger = {
          burger_name: $("#createBurger .burger_is").val().trim()
        };
        $.ajax("/", {
          type: "POST",
          data: newBurger
        }).then(
          function () {
            console.log("created new burger");
            location.replace("/");
          }
        )
      });

      //devour burger
      $(".devBtn").click(function () {
        event.preventDefault();

        var id = $(this).data("id");
        console.log(id);

        $.ajax("/update/" + id, {
          type: "PUT",
        }).then(
          function () {
            console.log("updated id " + id);
            location.replace("/");
          }
        )
        console.log("success");
      });
    });
  </script>
</body>
